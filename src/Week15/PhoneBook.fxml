<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root alignment="center" hgap="10" type="GridPane" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Week15.PhoneBookController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
    </rowConstraints>
    <children>
        <Label alignment="TOP_LEFT" text="Phone Book From:" />
        <ComboBox fx:id="phoneBookFromCombo" prefWidth="150.0" GridPane.columnIndex="1" />
        <Label text="Name:" GridPane.rowIndex="1" />
        <TextField fx:id="nameTF" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Number:" GridPane.rowIndex="2" />
        <TextField fx:id="numberTF" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button mnemonicParsing="false" onAction="#getNumber" prefHeight="25.0" prefWidth="149.0" text="Get Number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button mnemonicParsing="false" onAction="#addNewEntry" prefWidth="149.0" text="Add Number" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Phone Book To:" GridPane.rowIndex="5" />
        <ComboBox fx:id="phoneBookToCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Button mnemonicParsing="false" onAction="#transferNumber" prefHeight="25.0" prefWidth="149.0" text="Transfer Number" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
